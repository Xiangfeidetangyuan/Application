<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:layout_height="74dp">

    <CheckBox
        android:id="@+id/checkBox_fundList"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:theme="@style/CheckBoxTheme"
        android:layout_gravity="center_vertical"
        android:layout_width="22dp"
        android:layout_height="22dp"
         />
    <RelativeLayout
        android:layout_marginLeft="9dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/tv_fundList_fundId_and_name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_fundList_annualYields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fundList_fundId_and_name"
            android:layout_marginTop="@dimen/px_10"
            android:text="Annual Yields:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_fundList_annualYields_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fundList_fundId_and_name"
            android:layout_marginTop="@dimen/px_10"
            android:layout_toRightOf="@id/tv_fundList_annualYields"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_fundList_fundType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:layout_marginTop="@dimen/px_10"
            android:layout_below="@+id/tv_fundList_fundId_and_name"
            android:layout_toLeftOf="@id/tv_fundList_purchaseThreshold"/>

        <TextView
            android:id="@+id/tv_fundList_purchaseThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fundList_fundId_and_name"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/px_10"
            android:layout_marginRight="11dp"
            android:text=" No Purchase Threshold"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/iv_fundList_right"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/px_6"
            android:src="@drawable/right" />
    </RelativeLayout>
</LinearLayout>